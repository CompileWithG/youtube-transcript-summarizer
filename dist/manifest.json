{
  "manifest_version": 3,
  "name": "YouTube Smart Sidebar",
  "version": "1.2",
  "description": "Compact widget that expands to a full sidebar on YouTube.",
  "permissions": ["scripting"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
